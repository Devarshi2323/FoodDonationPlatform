<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fooddonation.controller.DonorDashboardController"
      alignment="CENTER" spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Welcome Donor!" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Button text="Make a Donation" onAction="#handleMakeDonation"/>
    <Button text="View My Donations" onAction="#handleViewMyDonations"/>

</VBox>
