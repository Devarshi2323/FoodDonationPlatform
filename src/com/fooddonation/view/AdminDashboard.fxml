<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fooddonation.controller.AdminDashboardController"
      alignment="CENTER" spacing="20" prefWidth="300" prefHeight="200">

    <Label text="Welcome Admin!" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <Button text="View All Users" onAction="#handleViewUsers"/>
    <Button text="View Donations" onAction="#handleViewDonations"/>
    <Button text="View Requests" onAction="#handleViewRequests" layoutY="90"/>
    <Button text="Manage Users" onAction="#handleManageUsers" />
    
    

</VBox>
