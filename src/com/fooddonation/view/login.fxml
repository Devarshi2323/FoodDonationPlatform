<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.fooddonation.controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" bottom="20" left="40" right="40"/>
            </padding>

            <Label text="Login to Food Donation Platform" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <ComboBox fx:id="roleBox" promptText="Select Role" />
            <Button text="Login" onAction="#handleLogin" />
            <Label fx:id="messageLabel" textFill="red" />

            
            <Button text="Register New Account" onAction="#handleRegisterRedirect" style="-fx-font-size: 12px;" />
        </VBox>
    </center>
</BorderPane>
