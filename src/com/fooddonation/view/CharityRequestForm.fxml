<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fooddonation.controller.CharityRequestFormController"
      style="-fx-padding: 20;">
    
    <Label text="Request Donation Item" style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.halignment="CENTER" />

<Label text="Your Email:" GridPane.rowIndex="1"/>
<TextField fx:id="emailField" promptText="Your Email" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

<Label text="Your Name:" GridPane.rowIndex="2"/>
<TextField fx:id="nameField" promptText="Your Name" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

<Label text="Item Name:" GridPane.rowIndex="3"/>
<TextField fx:id="itemField" promptText="Item Name" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

<Label text="Quantity:" GridPane.rowIndex="4"/>
<TextField fx:id="quantityField" promptText="Quantity" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

<Button text="Submit Request" onAction="#handleSubmitRequest" GridPane.rowIndex="5" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
<Label fx:id="messageLabel" GridPane.rowIndex="6" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

</VBox>
