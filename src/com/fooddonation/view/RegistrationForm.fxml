<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.fooddonation.controller.RegistrationController" prefWidth="400" prefHeight="450">
    <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="30.0">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>

        <Label text="User Registration" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Full Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <ComboBox fx:id="roleBox" promptText="Select Role" />
        <Button text="Register" onAction="#handleRegister" />
        <Label fx:id="messageLabel" textFill="red" />
    </VBox>
</AnchorPane>
