<?xml version="1.0" encoding="UTF-8"?> 

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.fooddonation.controller.UserListController">
    <VBox spacing="10.0" layoutX="20.0" layoutY="20.0" prefWidth="600">
        <Label text="All Registered Users" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TableView fx:id="userTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="150" />
                <TableColumn fx:id="roleColumn" text="Role" prefWidth="100" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
